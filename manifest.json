{
  "name": "EdScratch 日本語化",
  "version": "1.0",
  "description": "EdScratch V3を日本語化します。Scratchと相互に移行しやすいように、Scratchに近い翻訳になっています。",
  "manifest_version": 3,
  "icons": {
    "128": "icon.png"
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "block_rules.json"
    }]
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "*://*.edscratchapp.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "v3/blockly_compressed_vertical.js",
        "v3/blocks_compressed_vertical.js",
        "v3/messages.js"
      ],
      "matches": [
        "*://*.edscratchapp.com/*"
      ]
    }
  ]
}
